<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical" >

    <!-- Question 1 -->

    <TextView

        style="@style/questionStyle"
        android:text="Question no.1"/>


    <RadioGroup
        android:id="@+id/num_one_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/shantanu_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 1" />
        <RadioButton
            android:id="@+id/krishna_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 2" />
        <RadioButton
            android:id="@+id/dhritarashtra_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 3" />
        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 4" />

    </RadioGroup>

    <!-- Question 2 -->

    <TextView

        style="@style/questionStyle"
        android:text="Question no.2"
        />

    <RadioGroup
        android:id="@+id/num_two_radio_group"
        style="@style/radioStyle">
        />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 1" />
        <RadioButton
            android:id="@+id/dushala_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 3" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 4" />

    </RadioGroup>

    <!-- Question 3 -->

    <TextView

        style="@style/questionStyle"
        android:text="Question no.3"
        />



    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:hint="Please enter your answer"
        android:inputType="text"/>


    <!-- Question 4 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question no.4"
        android:textAppearance="?android:textAppearanceMedium"/>

    <CheckBox
        android:id="@+id/ganga_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/kunti_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/radha_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 3"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/satyavati_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 4"
        android:textSize="16sp"
        android:layout_marginBottom="16sp"/>

    <TextView

        style="@style/questionStyle"
        android:text="Qustion no.5"
        />


    <!-- Question 5 -->

    <RadioGroup
        android:id="@+id/num_five_radio_group"

        style="@style/radioStyle">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 3" />
        <RadioButton
            android:id="@+id/ved_vyasa_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Option 3" />

    </RadioGroup>

</LinearLayout>

</ScrollView>